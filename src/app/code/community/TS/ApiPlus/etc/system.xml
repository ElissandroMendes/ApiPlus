<config>
   <sections>
        <api>
            <groups>
                <api_plus translate="label" module="ts_apiplus">
                    <label>API Plus Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="ts_apiplus">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <cache_enabled translate="ts_apiplus">
                            <label>Enable Result Caching</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </cache_enabled>
                        <cache_lifetime translate="ts_apiplus">
                            <label>Result Caching Lifetime</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-not-negative-number</validate>
                            <depends>
                                <enabled>1</enabled>
                                <cache_enabled>1</cache_enabled>
                            </depends>
                        </cache_lifetime>
                    </fields>
                </api_plus>
            </groups>
        </api>
    </sections>
</config>
